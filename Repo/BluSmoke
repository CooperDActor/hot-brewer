class Secureapp < Formula
  desc "Secure application for macOS and iOS"
  homepage "https://github.com/BluSmoke/secureapp"
  url "https://github.com/BluSmoke/secureapp/archive/refs/tags/v1.0.0.tar.gz"
  sha256 "1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef"

  depends_on :macos # Ensure macOS compatibility

  def install
    # Verify the authenticity of the source
    system "gpg", "--verify", "signature.asc"

    # Check permissions and installation paths
    unless File.writable_real?("/usr/local/bin")
      opoo "You don't have write permission to /usr/local/bin."
      puts "Run `sudo chown -R $(whoami):admin /usr/local/bin` to fix."
      exit 1
    end

    # Build and install the application
    system "make", "install"
  end

  test do
    # Add a test if applicable
    system "#{bin}/secureapp", "--version"
  end
end
